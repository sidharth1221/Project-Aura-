/**
 * @fileoverview Firestore Security Rules for the AuraTwin platform.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user profiles. Each user can only
 * access and modify their own profile data. For features like the "Recent Activity" feed,
 * authenticated users are permitted to list user documents, as the feed is a core part of the
 * dashboard experience.
 *
 * Data Structure:
 * - User profiles are stored in `/users/{userId}`.
 * - Missions are stored in `/missions/{missionId}`.
 *
 * Key Security Decisions:
 * - Users can only create, read, update, and delete their own profiles.
 * - Authenticated users are allowed to list users and missions for dashboard features.
 * - Schema validation is enforced on update to ensure data integrity.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile documents.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if isSignedIn(); // Allow listing for authenticated users for dashboard features.
      allow create: if isNewOwner(userId);
      allow update: if isExistingOwner(userId) && isUpdatingAllowedFields();
      allow delete: if isExistingOwner(userId);
    }
    
    /**
     * @description Controls access to missions. Missions are read-only for users.
     */
    match /missions/{missionId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if false; // Admin-only
    }

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isNewOwner(userId) {
        return isOwner(userId) && request.resource.data.id == userId;
    }

    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }

    function isUpdatingAllowedFields() {
      let incomingKeys = request.resource.data.keys();
      // Defines all fields a user is permitted to update on their profile.
      let allowedKeys = ['firstName', 'lastName', 'updatedAt', 'energyUsage', 'solarPotential', 'district', 'auraPoints'];
      let basicUpdateKeys = ['firstName', 'lastName', 'updatedAt'];
      return incomingKeys.hasAll(allowedKeys) || incomingKeys.hasAll(basicUpdateKeys);
    }
  }
}
