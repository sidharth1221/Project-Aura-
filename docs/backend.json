{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user in the AuraTwin platform, linked to Firebase Authentication.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user (maps to Firebase Auth UID)."
        },
        "firstName": {
          "type": "string",
          "description": "The user's first name."
        },
        "lastName": {
          "type": "string",
          "description": "The user's last name."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        },
        "district": {
            "type": "string",
            "description": "The district the user belongs to."
        },
        "energyUsage": {
            "type": "number",
            "description": "The user's monthly energy usage in kWh."
        },
        "solarPotential": {
            "type": "number",
            "description": "The user's estimated yearly solar energy production in kWh."
        },
        "auraPoints": {
            "type": "number",
            "description": "The user's gamification points."
        },
        "createdAt": {
          "type": "string",
          "description": "The date and time the user was created.",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "description": "The date and time the user was last updated.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "firstName",
        "lastName",
        "email",
        "createdAt",
        "updatedAt"
      ]
    },
    "Mission": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Mission",
      "type": "object",
      "description": "Represents a challenge a user can complete for points.",
      "properties": {
        "title": {
          "type": "string",
          "description": "The description of the mission."
        },
        "reward": {
          "type": "number",
          "description": "The number of Aura Points awarded for completing the mission."
        }
      },
      "required": ["title", "reward"]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/backend/entities/User"
          },
          "description": "Stores user profiles. User ID is equivalent to Firebase Auth UID.",
          "params": [
            {
              "name": "userId",
              "description": "The Firebase Auth UID of the user."
            }
          ]
        }
      },
      {
        "path": "/missions/{missionId}",
        "definition": {
            "entityName": "Mission",
            "schema": {
                "$ref": "#/backend/entities/Mission"
            },
            "description": "Stores available missions for users."
        }
      }
    ]
  }
}
